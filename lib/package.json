{
  "name": "projen-python",
  "description": "Constructs and utilities for managing Python based projects with Projen enforcing solid build, test and linting structures",
  "repository": {
    "type": "git",
    "url": "https://github.com/flaviostutz/projen-python.git"
  },
  "scripts": {
    "build": "npx projen build",
    "bump": "npx projen bump",
    "clobber": "npx projen clobber",
    "compat": "npx projen compat",
    "compile": "npx projen compile",
    "default": "npx projen default",
    "eject": "npx projen eject",
    "package": "npx projen package",
    "package-all": "npx projen package-all",
    "package:js": "npx projen package:js",
    "package:python": "npx projen package:python",
    "post-compile": "npx projen post-compile",
    "post-upgrade": "npx projen post-upgrade",
    "pre-compile": "npx projen pre-compile",
    "release": "npx projen release",
    "test": "npx projen test",
    "test:update": "npx projen test:update",
    "test:watch": "npx projen test:watch",
    "unbump": "npx projen unbump",
    "upgrade": "npx projen upgrade",
    "watch": "npx projen watch",
    "projen": "npx projen"
  },
  "author": {
    "name": "Flavio Stutz",
    "email": "flaviostutz@gmail.com",
    "organization": false
  },
  "devDependencies": {
    "@stutzlab/eslint-config": "^3.1.1",
    "@swc/core": "^1.10.4",
    "@types/jest": "^29.5.14",
    "@types/node": "ts5.5",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "commit-and-tag-version": "^12",
    "constructs": "10.4.2",
    "jest": "^29.7.0",
    "jest-junit": "^16",
    "jsii": "~5.7.0",
    "jsii-diff": "^1.106.0",
    "jsii-pacmak": "^1.106.0",
    "jsii-rosetta": "~5.7.0",
    "projen": "0.91.6",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "5.5.4"
  },
  "peerDependencies": {
    "constructs": "^10.4.2",
    "projen": "^0.91.6"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5"
  },
  "bundledDependencies": [
    "@iarna/toml"
  ],
  "main": "lib/index.js",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.0",
  "jest": {
    "coverageProvider": "v8",
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "lcov",
      "cobertura",
      "text"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/.*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "src/.*/test.ts",
      "test/.*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "<rootDir>/@(src|test)/**/*(*.)@(spec|test).ts?(x)",
      "<rootDir>/@(src|test)/**/__tests__/**/*.ts?(x)",
      "<rootDir>/@(projenrc)/**/*(*.)@(spec|test).ts?(x)",
      "<rootDir>/@(projenrc)/**/__tests__/**/*.ts?(x)"
    ],
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "src/.*/test.ts",
      "test/.*"
    ],
    "watchPathIgnorePatterns": [
      "/node_modules/"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-reports"
        }
      ]
    ],
    "transform": {
      "^.+\\.[t]sx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.dev.json"
        }
      ]
    }
  },
  "types": "lib/index.d.ts",
  "stability": "stable",
  "jsii": {
    "outdir": "dist",
    "targets": {
      "python": {
        "distName": "projen_python",
        "module": "projen_python"
      }
    },
    "tsc": {
      "outDir": "lib",
      "rootDir": "src"
    }
  },
  "//": "~~ Generated by projen. To modify, edit .projenrc.ts and run \"npx projen\"."
}
